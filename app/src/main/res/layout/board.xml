<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/settings_background">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:padding="2dp">

        <TextView
            android:id="@+id/elapse_time"
            style="@style/timerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Elapsed Time: " />

        <TextView
            android:id="@+id/hour"
            style="@style/timerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00" />

        <TextView
            style="@style/timerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":" />

        <TextView
            android:id="@+id/min"
            style="@style/timerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00" />

        <TextView
            style="@style/timerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":" />

        <TextView
            android:id="@+id/sec"
            style="@style/timerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00" />

        <TextView
            style="@style/timerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":" />

        <TextView
            android:id="@+id/msec"
            style="@style/timerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00" />
    </LinearLayout>

    <com.board.game.sasha.Board
        android:id="@+id/board"
        android:layout_width="match_parent"
        android:layout_height="@dimen/board_height"
        android:layout_centerVertical="true"
        android:padding="2dp" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:visibility="visible">

        <TextView
            style="@style/timerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Moves took:" />

        <TextView
            android:id="@+id/moves"
            style="@style/timerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/startTimerContainer"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/initial_page_background"
        android:visibility="invisible">

        <TextView
            android:id="@+id/header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/btn_pink_matte"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="Game Begins in"
            android:textColor="@android:color/black"
            android:textSize="40sp" />

        <com.board.game.sasha.customviews.ArcTimer
            android:id="@+id/arcTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header" />

        <TextView
            android:id="@+id/timer_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/pink"
            android:textSize="150sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/playButtonContainer"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/initial_page_background"
        android:visibility="visible">

        <TextView
            android:id="@+id/headerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/btn_orange_matte"
            android:padding="10dp"
            android:text="@string/beginHeader"
            android:textColor="@android:color/black"
            android:textSize="30dp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/playButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/play_over_framebutton"
            android:clickable="true" />

        <TextView
            android:id="@+id/guideText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:paddingBottom="20dp"
            android:text="@string/start"
            android:textColor="@android:color/black"
            android:textStyle="bold" />
    </RelativeLayout>

</RelativeLayout>